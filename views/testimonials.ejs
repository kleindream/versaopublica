
<%- include("layout", { title: "Depoimentos", body: `  
  <div class="card">
    <div class="h" style="font-size: 2rem; font-weight: 900; color: var(--accent);">Depoimentos de ${user.username}</div>
    <form method="post" action="/testimonials/${user.username}">
      <label class="small" style="color: var(--text);">Enviar depoimento</label>
      <textarea name="content" placeholder="Escreva um depoimento..."></textarea>
      <br/>
      <button class="button" type="submit">Enviar</button>
    </form>
  </div>

  <div class="grid">
    <div class="card" style="background: var(--panel2);">
      <div class="h" style="font-size: 1.8rem; font-weight: 900; color: var(--accent);">Aprovados</div>
      ${testimonials.length ? testimonials.map(t => `
        <div class="card" style="margin-top: 10px;">
          <div class="h" style="color: var(--accent);">De: ${t.from}</div>
          <p style="color: var(--text);">${t.content}</p>
        </div>
      `).join('') : `<p style="color: var(--muted);">Ainda não há depoimentos. Que tal enviar o seu primeiro depoimento?</p>`}
    </div>
  </div>
` }) %>
